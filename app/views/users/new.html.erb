<div class="content">


    <div class="breadLine">

        <ul class="breadcrumb">
            <li><a href="<%= users_path %>">List Users</a> <span class="divider">></span></li>
            <li class="active">Add</li>
        </ul>

    </div>

    <div class="workplace">

        <div class="row-fluid">

            <div class="span12">
                <div class="head">
                    <div class="isw-grid"></div>
                    <h1>Users Management</h1>

                    <div class="clear"></div>
                </div>
                <div class="block-fluid">
                    <%= form_for(@model_obj, html: {multipath: true}) do |f| %>
                    <%#= render 'shared/error_messages' %>
                    	<div class="row-form">
                            <div class="span3">Username:</div>
                            <div class="span9"><%= f.text_field :name, :placeholder => "some text value..." %>
                           <% f.object.errors[:name].each do |msg| %>
                                <li style="color: red">
                                <%= msg%>
                                </li>
                            <% end %>
                            </div>
                            <div class="clear"></div>
                        </div> 
                    	<div class="row-form">
                            <div class="span3">Email:</div>
                            <div class="span9"><%= f.text_field :email, :placeholder => "some text value..." %>
                            <% f.object.errors[:email].each do |msg| %>
                                <li style="color: red">
                                <%= msg%>
                                </li>
                            <% end %>
                            </div>
                            <div class="clear"></div>
                        </div> 
                    	<div class="row-form">
                            <div class="span3">Password:</div>
                            <div class="span9"><%= f.password_field :password, :placeholder => "some text value..."%>
                            <% f.object.errors[:password].each do |msg| %>
                                <li style="color: red">
                                <%= msg%>
                                </li>
                            <% end %>
                            </div>
                            <div class="clear"></div>
                        </div> 
                    	<div class="row-form">
                            <div class="span3">Upload Avatar:</div>
                            <div class="span9">
                            <%= f.file_field :picture %>
                            </div>
                            <div class="clear"></div>
                        </div> 
                        <div class="row-form">
                            <div class="span3">Activate:</div>
                            <div class="span9">
                                <%= f.select :active, [["Active", true], ["Deactive", false]]%>
                            </div>
                            <div class="clear"></div>
                        </div>                          
                        <div class="row-form">
                        	<%= f.submit "Create", class: "btn btn-success" %>
							<div class="clear"></div>
                        </div>
                    <% end %>
                    <div class="clear"></div>
                </div>
            </div>

        </div>
        <div class="dr"><span></span></div>

    </div>

</div>
